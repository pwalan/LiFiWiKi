<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lab414.bupt.com.lifiwiki.Quanzi">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="LIFEWIKI"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:background="#d23c43"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="#d23c43">

            <TextView
                android:id="@+id/tab1_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="#ffffff"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tab2_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我的圈子"
                android:textColor="#ffffff"
                android:textSize="20dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@drawable/down_line" />

        <android.support.v4.view.ViewPager
            android:id="@+id/third_vp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e5e5e5"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <ImageButton
            android:id="@+id/zhuye"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/maintwo"/>

        <ImageButton
            android:id="@+id/pengyouquan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/pengyouquanone"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/fabiao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/mainupload"
        android:layout_marginBottom="-30dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
